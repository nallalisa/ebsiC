<UserControl x:Class="ebsiC.Assets.MVVM.View.userControl.addEmployee"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ebsiC.Assets.MVVM.View.userControl"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             xmlns:userControl="clr-namespace:ebsiC.Assets.MVVM.View.userControl"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="TabItem">
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="MaxWidth"
                    Value="200"/>
            <Setter Property="FontSize" 
                    Value="20"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border Name="Border"
                                Background="#88C0D0" 
                                Margin="5"
                                Padding="10,5"
                                BorderBrush="Transparent">
                            <ContentPresenter x:Name="ContentSite"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"
                                              ContentSource="Header"
                                              RecognizesAccessKey="True">
                                <ContentPresenter.ContentTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding}" 
                                                   TextWrapping="Wrap" 
                                                   TextAlignment="Center"
                                                   HorizontalAlignment="Center"/>
                                    </DataTemplate>
                                </ContentPresenter.ContentTemplate>
                            </ContentPresenter>

                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" 
                                     Value="True">
                                <Setter TargetName="Border" 
                                        Property="Background" 
                                        Value="#5E81AC"/>
                                <Setter TargetName="Border" 
                                        Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black"
                                                          BlurRadius="10" 
                                                          ShadowDepth="0"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" 
                                     Value="True">
                                <Setter TargetName="Border" 
                                        Property="Background"
                                        Value="#81A1C1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Add New Employee"
                       Foreground="White"
                       VerticalAlignment="Center"
                       FontSize="32"
                       Margin="20 0 0 0"/>
            <Button Grid.Column="1"
                    Width="auto"
                    Height="auto"
                    Margin="5"
                    BorderBrush="Transparent"
                    Background="Transparent"
                    Foreground="white"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                    Content="{materialDesign:PackIcon Kind=WindowClose,Size=25}"/>
        </Grid>
        <TabControl Grid.Row="1"
                    Margin="30"
                    IsEnabled="False"
                    x:Name="EmployeeTabControl">
            <TabItem Header="Personal Information">
                <Grid Margin="5">
                    <TextBlock Text="PERSONAL INFORMATION"/>
                </Grid>
            </TabItem>
            <TabItem Header="Address">
                <Grid Margin="5">
                    <TextBlock Text="ADDRESS"
                               HorizontalAlignment="Center"
                               VerticalAlignment="center"/>
                </Grid>
            </TabItem>
            <TabItem Header="Employee Information">
                <Grid Margin="5">
                    <TextBlock Text="EMPLOYEE INFORMATION"
                               HorizontalAlignment="Center"
                               VerticalAlignment="center"/>
                </Grid>
            </TabItem>
            <TabItem Header="Government Information">
                <Grid Margin="5">
                    <TextBlock Text="GOVERNMENT INFORMATION"
                               HorizontalAlignment="Center"
                               VerticalAlignment="center"/>
                </Grid>
            </TabItem>
        </TabControl>
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Previous" Margin="10 10 0 10" Width="100" Click="Button_Click_1"/>
            <Button Content="Next" Margin="10 10" Width="100" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</UserControl>