<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ebsiC.Assets.MVVM.View.admin"
             xmlns:userControl="clr-namespace:ebsiC.Assets.MVVM.View.userControl" x:Class="ebsiC.Assets.MVVM.View.admin.Administration"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Margin="10"
          Background="#FFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="525"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel >
            <TabControl TabStripPlacement="Top"
                        Foreground="#000000"
                        Background="#FFFFFF"
                        Margin="5">
                <TabItem Header="Manage Admin" 
                         Foreground="#000000">
                    <Grid Margin="5">
                        <Button Margin="3 0 3 50"
                                Width="185"
                                Foreground="#000000"
                                HorizontalAlignment="Right"
                                Content="Add New Administrator">
                        </Button>
                        <!-- This section is for the Admin Tab -->
                        <DataGrid x:Name="DataGridAdmin"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  Margin="3 50 3 0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Employee No."
                                Binding="{Binding EmployeeNo}"
                                Width="*" />
                                <DataGridTextColumn Header="Name"
                                Binding="{Binding Name}"
                                Width="*" />
                                <DataGridTextColumn Header="Department"
                                Binding="{Binding Department}"
                                Width="*" />
                                <DataGridTextColumn Header="E-mail"
                                Binding="{Binding Email}"
                                Width="*" />
                                <DataGridTextColumn Header="Username"
                                Binding="{Binding Username}"
                                Width="*" />
                                <DataGridTextColumn Header="Actions"
                                Binding="{Binding Actions}"
                                Width="*" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
                <TabItem Header="Manage Employee" Foreground="#000000" Background="#000000">
                    <Grid Margin="5">
                        <Button Margin="3 0 3 50"
                                Width="185"
                                Foreground="#000000"
                                HorizontalAlignment="Right"
                                Content="Add New Employee">
                        </Button>
                        <!-- This section is for the Admin Tab -->
                        <DataGrid x:Name="DataGridEmployee"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  Margin="3 50 3 0">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Employee No."
                                                    Binding="{Binding EmployeeNo}"
                                                    Width="*" />
                                <DataGridTextColumn Header="Name"
                                                    Binding="{Binding Name}"
                                                    Width="*" />
                                <DataGridTextColumn Header="Department"
                                                    Binding="{Binding Department}"
                                                    Width="*" />
                                <DataGridTextColumn Header="Position"
                                                    Binding="{Binding Position}"
                                                    Width="*" />
                                <DataGridTextColumn Header="Schedule"
                                                    Binding="{Binding Schedule}"
                                                    Width="*" />
                                <DataGridTextColumn Header="E-mail"
                                                    Binding="{Binding Email}"
                                                    Width="*" />
                                <DataGridTextColumn Header="Username"
                                                    Binding="{Binding Username}"
                                                    Width="*" />
                                <DataGridTextColumn Header="Actions"
                                                    Binding="{Binding Actions}"
                                                    Width="*" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                </TabItem>
            </TabControl>
        </StackPanel>
    </Grid>
</UserControl>
