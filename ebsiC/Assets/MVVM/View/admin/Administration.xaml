<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ebsiC.Assets.MVVM.View.admin"
             xmlns:userControl="clr-namespace:ebsiC.Assets.MVVM.View.userControl" x:Class="ebsiC.Assets.MVVM.View.admin.Administration"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="525"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel >
            <TabControl TabStripPlacement="Top"
                        Foreground="#FFFFFF"
                        Background="#FFFFFF"
                        Margin="5">
                <TabItem Header="Manage Admin"></TabItem>
                <TabItem Header="Manage Employee"></TabItem>
            </TabControl>

            <Button Content="Add New Administrator"
                    Width="185"
                    Margin="0 5 20 5"
                    HorizontalAlignment="Right"/>

            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        Margin="5">
                <TextBlock FontSize="16"
                           Foreground="#FFFFFF"
                           Text="Show">Show</TextBlock>
                <ComboBox Margin="10 0 10 0"
                          Width="50"
                          Height="Auto"
                          VerticalAlignment="Top"
                          HorizontalAlignment="Center"
                          BorderThickness="1">
                    <ComboBoxItem Content="5"></ComboBoxItem>
                    <ComboBoxItem Content="10"></ComboBoxItem>
                    <ComboBoxItem Content="15"></ComboBoxItem>
                    <ComboBoxItem Content="20"></ComboBoxItem>
                    <ComboBoxItem Content="25"></ComboBoxItem>
                    <ComboBoxItem Content="50"></ComboBoxItem>
                </ComboBox>
                <TextBlock FontSize="16"
                           Foreground="#FFFFFF"
                           Text="entries"></TextBlock>
            </StackPanel>
            
            <!-- This section is for the Admin Tab -->
            <!-- Just replace the x:name to distinguish it from TimeKeeping -->
            <DataGrid x:Name="DataGridExcel"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      CanUserAddRows="False"
                      Margin="5">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Employee No."
                                        Binding="{Binding EmployeeNo}"
                                        Width="*" />
                    <DataGridTextColumn Header="Name"
                                        Binding="{Binding Name}"
                                        Width="*" />
                    <DataGridTextColumn Header="Department"
                                        Binding="{Binding Department}"
                                        Width="*" />
                    <DataGridTextColumn Header="E-mail Address"
                                        Binding="{Binding Email}"
                                        Width="*" />
                    <DataGridTextColumn Header="Username"
                                        Binding="{Binding Username}"
                                        Width="*" />
                    <DataGridTextColumn Header="Actions"
                                        Binding="{Binding Actions}"
                                        Width="*" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- Still not sure how to work on the page button, see figma for ref -->
            <StackPanel Grid.Row="1"
                        Orientation="Horizontal"
                        Margin="5">
                <TextBlock FontSize="16"
                           Foreground="#FFFFFF"
                           HorizontalAlignment="Left"
                           Text="Showing nth of nth entries "></TextBlock>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
