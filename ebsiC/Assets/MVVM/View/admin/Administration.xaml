<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ebsiC.Assets.MVVM.View.admin"
             xmlns:userControl="clr-namespace:ebsiC.Assets.MVVM.View.userControl" x:Class="ebsiC.Assets.MVVM.View.admin.Administration"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid Margin="10"
          Background="#FFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="525"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel >
            <TabControl TabStripPlacement="Top"
                        Foreground="#000000"
                        Background="#FFFFFF"
                        Margin="5">
                <TabItem Header="Manage Admin">
                    <Grid Margin="10">
                        <StackPanel Grid.Row="1"
                                Orientation="Horizontal"
                                Margin="10">
                            <TextBlock FontSize="16"
                                       Foreground="#000000"> Show
                            </TextBlock>
                            <ComboBox Margin="10 0 10 0"
                                      Width="50"
                                      Height="Auto"
                                      VerticalAlignment="Top"
                                      HorizontalAlignment="Center"
                                      BorderThickness="1">
                                <ComboBoxItem Content="5"></ComboBoxItem>
                                <ComboBoxItem Content="10"></ComboBoxItem>
                                <ComboBoxItem Content="15"></ComboBoxItem>
                                <ComboBoxItem Content="20"></ComboBoxItem>
                                <ComboBoxItem Content="25"></ComboBoxItem>
                                <ComboBoxItem Content="50"></ComboBoxItem>
                            </ComboBox>
                            <!-- <userControl:comboBox/> -->
                            <TextBlock FontSize="16"
                                       Foreground="#000000"
                                       Text="entries"></TextBlock>

                        </StackPanel>
                    <!-- This section is for the Admin Tab -->
                        <DataGrid x:Name="DataGridAdmin"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  Margin="20">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Employee No."
                                Binding="{Binding EmployeeNo}"
                                Width="*" />
                                <DataGridTextColumn Header="Name"
                                Binding="{Binding Name}"
                                Width="*" />
                                <DataGridTextColumn Header="Department"
                                Binding="{Binding Department}"
                                Width="*" />
                                <DataGridTextColumn Header="E-mail"
                                Binding="{Binding Email}"
                                Width="*" />
                                <DataGridTextColumn Header="Username"
                                Binding="{Binding Username}"
                                Width="*" />
                                <DataGridTextColumn Header="Actions"
                                Binding="{Binding Actions}"
                                Width="*" />
                            </DataGrid.Columns>
                        </DataGrid>
                    
                    <!-- Still not sure how to work on the page button, see figma for ref -->

                        <TextBlock FontSize="16"
                                   Foreground="#000000"
                                   HorizontalAlignment="Left"
                                   Text="Showing nth of nth entries "></TextBlock>
                   </Grid>
                </TabItem>
                <TabItem Header="Manage Employee">
                    <Grid Margin="10">
                        <StackPanel Grid.Row="1"
                                    Orientation="Horizontal"
                                    Margin="5">
                            <TextBlock FontSize="16"
                                       Foreground="#000000"> Show
                            </TextBlock>
                            <ComboBox Margin="10 0 10 0"
                                      Width="50"
                                      Height="Auto"
                                      VerticalAlignment="Top"
                                      HorizontalAlignment="Center"
                                      BorderThickness="1">
                                <ComboBoxItem Content="5"></ComboBoxItem>
                                <ComboBoxItem Content="10"></ComboBoxItem>
                                <ComboBoxItem Content="15"></ComboBoxItem>
                                <ComboBoxItem Content="20"></ComboBoxItem>
                                <ComboBoxItem Content="25"></ComboBoxItem>
                                <ComboBoxItem Content="50"></ComboBoxItem>
                            </ComboBox>
                            <!-- <userControl:comboBox/> -->
                            <TextBlock FontSize="16"
                                       Foreground="#000000"
                                       Text="entries"></TextBlock>

                        </StackPanel>
                        <!-- This section is for the Admin Tab -->
                        <DataGrid x:Name="DataGridEmployee"
                                  AutoGenerateColumns="False"
                                  IsReadOnly="True"
                                  CanUserAddRows="False"
                                  Margin="5">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Employee No."
                                                    Binding="{Binding EmployeeNo}"
                                                    Width="*" />
                                <DataGridTextColumn Header="Name"
                                                    Binding="{Binding Name}"
                                                    Width="*" />
                                <DataGridTextColumn Header="Department"
                                                    Binding="{Binding Department}"
                                                    Width="*" />
                                <DataGridTextColumn Header="Position"
                                                    Binding="{Binding Position}"
                                                    Width="*" />
                                <DataGridTextColumn Header="Schedule"
                                                    Binding="{Binding Schedule}"
                                                    Width="*" />
                                <DataGridTextColumn Header="E-mail"
                                                    Binding="{Binding Email}"
                                                    Width="*" />
                                <DataGridTextColumn Header="Username"
                                                    Binding="{Binding Username}"
                                                    Width="*" />
                                <DataGridTextColumn Header="Actions"
                                                    Binding="{Binding Actions}"
                                                    Width="*" />
                            </DataGrid.Columns>
                        </DataGrid>

                        <!-- Still not sure how to work on the page button, see figma for ref -->

                        <TextBlock FontSize="16"
                Foreground="#000000"
                HorizontalAlignment="Left"
                Text="Showing nth of nth entries "></TextBlock>
                    </Grid>
                </TabItem>
            </TabControl>

        </StackPanel>
    </Grid>
</UserControl>
