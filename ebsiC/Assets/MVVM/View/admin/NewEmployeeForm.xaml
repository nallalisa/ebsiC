<UserControl x:Class="ebsiC.Assets.MVVM.View.admin.NewEmployeeForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ebsiC.Assets.MVVM.View.admin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10"
          Background="#FFFFFF">
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="525"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0 0 0 175"
                    Height="125">
            <TextBlock Margin="30"
                       Padding="15"
                       Width="100"
                       Height="60"
                       TextWrapping="Wrap"
                       Text="Personal Information"
                       TextAlignment="Center"
                       Foreground="#000000"
                       Background="LightBlue"></TextBlock>
            <TextBlock Margin="30"
                       Padding="15"
                       Width="100"
                       Height="60"
                       TextWrapping="Wrap"
                       Text="Address"
                       TextAlignment="Center"
                       Foreground="#000000"
                       Background="LightBlue"></TextBlock>
            <TextBlock Margin="30"
                       Padding="15"
                       Width="100"
                       Height="60"
                       TextWrapping="Wrap"
                       Text="Employment Information"
                       TextAlignment="Center"
                       Foreground="#000000"
                       Background="LightBlue"></TextBlock>
            <TextBlock Margin="30"
                       Padding="15"
                       Width="100"
                       Height="60"
                       TextWrapping="Wrap"
                       Text="Personal Information"
                       TextAlignment="Center"
                       Foreground="#000000"
                       Background="LightBlue"></TextBlock>
        </StackPanel>
        
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    Height="125">
            <Label Margin="30 0 30 0"
                   Padding="15"
                   Height="50"
                   Foreground="#000000"
                   Content="Employee ID"></Label>
            <Label Margin="30 0 30 0"
                   Padding="15"
                   Height="50"
                   Foreground="#000000"
                   Content="Employee ID"
                   HorizontalAlignment="Center"></Label>
            <Label Margin="30 0 30 0"
                   Padding="15"
                   Height="50"
                   Foreground="#000000"
                   Content="Employee ID"
                   HorizontalContentAlignment="Right"></Label>
        </StackPanel>

        <StackPanel Grid.Row="2"                                    Orientation="Horizontal"                        HorizontalAlignment="Right"
                    Margin="10">
            <Button Width="100"
                    Content="Previous"
                    Margin="10"></Button>
            <Button Width="100"
                    Content="Next"
                    Margin="10"></Button>
        </StackPanel>
    </Grid>
</UserControl>
